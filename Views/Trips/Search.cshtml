@model ASAPGetaway.ViewModels.TripSearchViewModel

<h2>Search Trips</h2>

<form method="get" action="/Trips/Search">
    <input type="text"
           name="searchTerm"
           placeholder="Search by destination, country or package name"
           value="@Model.SearchTerm" />

    <button type="submit">Search</button>
</form>

<hr />

@if (Model.Trips.Count == 0)
{
    <p>No trips found.</p>
}
else
{
    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Package</th>
                <th>Destination</th>
                <th>Country</th>
                <th>Dates</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var trip in Model.Trips)
        {
            <tr>
                <td>@trip.PackageName</td>
                <td>@trip.Destination</td>
                <td>@trip.Country</td>
                <td>@trip.StartDate.ToShortDateString() - @trip.EndDate.ToShortDateString()</td>
                <td>@trip.BasePrice â‚ª</td>
                <td>
                    <a href="/Trips/Details/@trip.TripId">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
