@{
    int bookingsCount = ViewBag.BookingsCount;
    var idsList = ViewBag.IdsList as List<int>;
}

<!-- üéâ‚úàÔ∏è Success Plane Animation -->
<style>
    .success-plane {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #10B981, #0EA5E9);
        z-index: 9999;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        animation: successFadeOut 1s ease 2.5s forwards;
    }

    .success-plane-icon {
        font-size: 10em;
        animation: successPlaneFly 2s ease forwards;
    }

    .success-celebration-text {
        color: white;
        font-size: 2.5em;
        font-weight: 700;
        margin-top: 30px;
        opacity: 0;
        animation: successTextAppear 1s ease 0.5s forwards;
    }

    @@keyframes successPlaneFly {
        0% {
            transform: translateX(-300px) translateY(200px) rotate(-30deg) scale(0.5);
            opacity: 0;
        }
        50% {
            transform: translateX(0) translateY(0) rotate(0deg) scale(1);
            opacity: 1;
        }
        100% {
            transform: translateX(0) translateY(0) rotate(5deg) scale(1.1);
            opacity: 1;
        }
    }

    @@keyframes successTextAppear {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes successFadeOut {
        to {
            opacity: 0;
            visibility: hidden;
        }
    }
</style>

<div class="success-plane" id="successPlane">
    <div class="success-plane-icon">‚úàÔ∏è</div>
    <div class="success-celebration-text">üéâ Booking Successful!</div>
</div>

<script>
    window.addEventListener('load', function() {
        setTimeout(function() {
            document.getElementById('successPlane').style.display = 'none';
        }, 3500);
    });
</script>

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
